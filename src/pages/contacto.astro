---
import { FormContacto } from "../components/FormContacto";
import Subtitle from "../components/Subtitle";
import Text from "../components/Text";
import WsapBtn from "../components/WsapBtn";
import Layout from "../layouts/Layout.astro";
import Breadcrumb from "../components/Breadcrumb.astro";
import { FooterText } from "../mock/footer";
import { contactoText } from "../mock/textViews/contactoText";

// Breadcrumb items
const breadcrumbItems = [
	{ name: "Inicio", url: "/" },
	{ name: "Contacto", url: "/contacto" }
];
---

<Layout title={contactoText.metaTitle} content={contactoText.metaContent}>
  <main>
    <section
      class="w-full mx-auto px-4 py-8 md:w-11/12 xl:w-10/12 border-2 border-t-0 border-b-0 border-dashed md:border-3 md:border-y-0 border-COLOR1 flex flex-col justify-center items-center"
    >
      
      <!-- Breadcrumb Navigation -->
      <div class="w-full mb-6">
        <Breadcrumb items={breadcrumbItems} />
      </div>
      <!-- Primera seccion (subtitulo y texto) -->
      <Subtitle
        name={contactoText.Subtitle1}
        bgColor="bg-COLOR3"
        textColor="CBACKGROUND"
        client:visible
      />
      <Text text={contactoText.text1} textColor="COLOR1" client:visible />

      <!-- Formulario de contacto -->
      <FormContacto client:visible />
    </section>
  </main>
</Layout>
